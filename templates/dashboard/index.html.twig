{% extends 'base.html.twig' %}

{% block title %}Dashboard - VPS Manager{% endblock %}

{% block body %}
<div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">
        Bonjour, {{ app.user.name }} üëã
    </h1>
    <p class="mt-2 text-gray-600">Voici un aper√ßu de vos serveurs VPS</p>
</div>

{# Statistiques globales #}
<div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4 mb-8">
    <div class="bg-white overflow-hidden shadow-sm rounded-lg border border-gray-200 card-hover">
        <div class="p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="rounded-md bg-indigo-500 p-3">
                        <i class="fas fa-server text-white text-xl"></i>
                    </div>
                </div>
                <div class="ml-5 w-0 flex-1">
                    <dl>
                        <dt class="text-sm font-medium text-gray-500 truncate">Total Serveurs</dt>
                        <dd class="text-2xl font-semibold text-gray-900">{{ stats.total }}</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="bg-white overflow-hidden shadow-sm rounded-lg border border-gray-200 card-hover">
        <div class="p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="rounded-md bg-green-500 p-3">
                        <i class="fas fa-check-circle text-white text-xl"></i>
                    </div>
                </div>
                <div class="ml-5 w-0 flex-1">
                    <dl>
                        <dt class="text-sm font-medium text-gray-500 truncate">Actifs</dt>
                        <dd class="text-2xl font-semibold text-gray-900">{{ stats.active }}</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="bg-white overflow-hidden shadow-sm rounded-lg border border-gray-200 card-hover">
        <div class="p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="rounded-md bg-yellow-500 p-3">
                        <i class="fas fa-microchip text-white text-xl"></i>
                    </div>
                </div>
                <div class="ml-5 w-0 flex-1">
                    <dl>
                        <dt class="text-sm font-medium text-gray-500 truncate">CPU Moyen</dt>
                        <dd class="text-2xl font-semibold text-gray-900">{{ stats.avgCpu }}%</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="bg-white overflow-hidden shadow-sm rounded-lg border border-gray-200 card-hover">
        <div class="p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="rounded-md bg-purple-500 p-3">
                        <i class="fas fa-memory text-white text-xl"></i>
                    </div>
                </div>
                <div class="ml-5 w-0 flex-1">
                    <dl>
                        <dt class="text-sm font-medium text-gray-500 truncate">RAM Moyenne</dt>
                        <dd class="text-2xl font-semibold text-gray-900">{{ stats.avgMemory }}%</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>

{# Liste des serveurs #}
<div class="bg-white shadow-sm rounded-lg border border-gray-200">
    <div class="px-6 py-5 border-b border-gray-200 flex justify-between items-center">
        <h2 class="text-xl font-semibold text-gray-900">
            <i class="fas fa-server mr-2"></i> Mes Serveurs VPS
        </h2>
        <a href="{{ path('app_vps_server_new') }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            <i class="fas fa-plus mr-2"></i> Ajouter un serveur
        </a>
    </div>

    {% if servers|length > 0 %}
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Serveur
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Localisation
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Statut
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            M√©triques
                        </th>
                        <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for server in servers %}
                        <tr class="hover:bg-gray-50 transition-colors">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    <div class="flex-shrink-0 h-10 w-10 rounded-lg bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center">
                                        <i class="fas fa-server text-white"></i>
                                    </div>
                                    <div class="ml-4">
                                        <div class="text-sm font-medium text-gray-900">{{ server.name }}</div>
                                        <div class="text-sm text-gray-500">{{ server.ipAddress }}</div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-900">
                                    <i class="fas fa-map-marker-alt mr-1 text-gray-400"></i>
                                    {{ server.location|default('Non sp√©cifi√©') }}
                                </div>
                                <div class="text-sm text-gray-500">{{ server.provider|default('-') }}</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full 
                                    {% if server.status == 'active' %}bg-green-100 text-green-800
                                    {% elseif server.status == 'inactive' %}bg-red-100 text-red-800
                                    {% else %}bg-yellow-100 text-yellow-800{% endif %}">
                                    {% if server.status == 'active' %}
                                        <i class="fas fa-circle mr-1 mt-0.5"></i> Actif
                                    {% elseif server.status == 'inactive' %}
                                        <i class="fas fa-circle mr-1 mt-0.5"></i> Inactif
                                    {% else %}
                                        <i class="fas fa-circle mr-1 mt-0.5"></i> Maintenance
                                    {% endif %}
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                {% set latestMetric = server.latestMetric %}
                                {% if latestMetric %}
                                    <div class="text-sm text-gray-900">
                                        <div class="flex items-center space-x-3">
                                            <span title="CPU"><i class="fas fa-microchip text-yellow-500"></i> {{ latestMetric.cpuUsage }}%</span>
                                            <span title="RAM"><i class="fas fa-memory text-purple-500"></i> {{ latestMetric.memoryUsage }}%</span>
                                            <span title="Disque"><i class="fas fa-hdd text-blue-500"></i> {{ latestMetric.diskUsage }}%</span>
                                        </div>
                                    </div>
                                {% else %}
                                    <span class="text-sm text-gray-400">Aucune donn√©e</span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <a href="{{ path('app_vps_server_show', {'id': server.id}) }}" class="text-indigo-600 hover:text-indigo-900 mr-3" title="Voir">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('app_vps_server_edit', {'id': server.id}) }}" class="text-green-600 hover:text-green-900 mr-3" title="Modifier">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <button onclick="confirmDelete({{ server.id }})" class="text-red-600 hover:text-red-900" title="Supprimer">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="text-center py-12">
            <i class="fas fa-server text-gray-300 text-6xl mb-4"></i>
            <h3 class="text-lg font-medium text-gray-900 mb-2">Aucun serveur VPS</h3>
            <p class="text-gray-500 mb-6">Commencez par ajouter votre premier serveur VPS</p>
            <a href="{{ path('app_vps_server_new') }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700">
                <i class="fas fa-plus mr-2"></i> Ajouter un serveur
            </a>
        </div>
    {% endif %}
</div>

{# Formulaire de suppression cach√© #}
<form id="deleteForm" method="post" style="display: none;">
    <input type="hidden" name="_token" id="deleteToken">
</form>
{% endblock %}

{% block javascripts %}
<script>
function confirmDelete(serverId) {
    if (confirm('√ätes-vous s√ªr de vouloir supprimer ce serveur VPS ?')) {
        const form = document.getElementById('deleteForm');
        form.action = '{{ path('app_vps_server_delete', {'id': '__ID__'}) }}'.replace('__ID__', serverId);
        document.getElementById('deleteToken').value = '{{ csrf_token('delete') }}' + serverId;
        form.submit();
    }
}
</script>
{% endblock %}
